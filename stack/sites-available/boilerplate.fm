# FIXME: update this automatically based on the project
upstream boilerplate_upstream {
	server 127.0.0.1:8888;
	keepalive 64;
}
server {
	listen 81 default_server;
	server_name *.ohm.fm;
	root /home/git/public/production/static;
	location ~ ^/(images/|components/|img/|javascript/|js/|css/|343.ttf|gcal.html|stylesheets/|media/|static/|robots.txt|humans.txt) {
	  access_log off;
	  expires max;
	}
	location / {
		proxy_redirect off;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header	 X-Forwarded-Proto $scheme;
		proxy_set_header Host $http_host;
		proxy_set_header X-NginX-Proxy true;
		proxy_set_header	 Connection "";
		proxy_http_version 1.1;
		proxy_pass http://boilerplate_upstream;
	}
}