echo "installing bins..."
brew  install ${bins[@]}

# Install apps
echo "installing apps..."
brew cask install ${apps[@]}

# Install fonts
echo "installing fonts..."
brew cask install ${fonts[@]}

# Cleanup
brew cleanup
brew cask cleanup

# Doctor
brew cask doctor
